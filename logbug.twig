<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}">
    {% endif %}

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,700" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/bootstrap-3.1.1.min.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/style.css" type="text/css" />

    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="{{ theme_url }}/scripts/modernizr-2.6.1.min.js"></script>
    <script src="{{ theme_url }}/scripts/redmineService.js"></script>
    <script src="{{ theme_url }}/scripts/main.js"></script>
</head>
<body>

    <header id="header">
        <div class="inner clearfix">
            <h1><a href="{{ "praxis/test_suite"|link }}" id="logo">{{ site_title }}</a></h1>
            <nav>
                <a href="#" class="menu-icon"></a>
                <ul id="redmineConnector">
                    <li><a class="account" href="//www.hostedredmine.com/my/account" target="redmine_profile">Connect to Redmine</a></li>
                    <li><a class="logbug" href="//www.hostedredmine.com/projects/praxis/issues/new" target="redmine_log_bug">Log a Bug</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section id="content">
        <div class="inner">
            <form>
              <div class="form-group">
                <label for="frmSubject">Subject</label>
                <input type="text"
                        class="form-control" id="frmSubject" placeholder="Subject"/>
              </div>

              <div class="form-group">
                <label for="frmDescription">Description</label>
                <textarea id="frmDescription" class="form-control" rows="3" placeholder="Description"></textarea>
              </div>

              <div class="form-inline">
                  <div class="form-group">
                    <label for="frmTracker">Type</label>
                    <select id="frmTracker" class="form-control">
                        <option label="bug" value="1" selected="selected">bug</option>
                        <option label="feature" value="2">feature</option>
                    </select>
                  </div>

                  <div class="form-group">
                    <label for="frmPriority">Priority</label>
                    <select id="frmPriority" class="form-control">
                        <option label="low" value="3">low</option>
                        <option label="normal" value="4" selected="selected">normal</option>
                        <option label="high" value="5">high</option>
                        <option label="urgent" value="6">urgent</option>
                        <option label="immediate" value="7">immediate</option>
                    </select>
                  </div>

                  <div class="form-group">
                    <label for="frmVersion">Found in Version</label>
                    <select id="frmVersion" class="form-control">
                        <option label="1.0" value="10725">1.0</option>
                        <option label="2.0" value="9151" selected="selected">2.0</option>
                        <option label="future" value="11074">future</option>
                    </select>
                  </div>
              </div>
              <div class="form-group">
                  <button type="submit" onclick="return false" class="btn btn-default btn-submit">Submit</button>
                  <a href="#" class="btn btn-cancel">Cancel</button>
              </div>
            </form>
        </div>
    </section>

    <footer id="footer">
        <div class="inner">
        </div>
    </footer>
</body>
</html>
